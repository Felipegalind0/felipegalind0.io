---
import Layout from "../layouts/Layout.astro";
import StatusCard from "../components/StatusCard.astro";
import GithubStats from "../components/GithubStats.astro";
---

<Layout>
  <main class="grid-hud">
    <section class="cell cell-a"><StatusCard /></section>
    <section class="cell cell-c"><GithubStats /></section>
    <section class="cell cell-b"><h2>INPUT_STREAM</h2></section>
    <section class="cell cell-d"><h2>CORRUPT_DATA</h2></section>
    <section class="cell cell-e"><h2>RECENT_COMMITS</h2></section>
  </main>
</Layout>

<style>
  .grid-hud {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(var(--cell-min), 1fr));
    grid-auto-rows: auto;
    gap: var(--gap);
    padding: var(--gap);
  }

  @media (min-width: 768px) {
    .grid-hud {
      grid-template-columns: repeat(4, 1fr);
      grid-template-rows: 1fr auto 1fr;
      height: 100dvh;
    }

    .cell-a {
      grid-column: 1 / 3;
      grid-row: 1 / 3;
    }

    .cell-b {
      grid-column: 3 / 4;
      grid-row: 1 / 2;
    }

    .cell-c {
      grid-column: 3 / 5;
      grid-row: 2 / 3;
    }

    .cell-d {
      grid-column: 4 / 5;
      grid-row: 1 / 2;
    }

    .cell-e {
      grid-column: 1 / 5;
      grid-row: 3 / 4;
    }
  }

  .cell {
    border: 1px solid var(--fg-dim);
    padding: 1rem;
    border-radius: var(--radius);
    background: rgba(128, 128, 128, 0.04);
    overflow: hidden;
  }

  .cell-c {
    grid-column: span 1;
    padding: 0;
  }

  @media (min-width: 580px) {
    .cell-c {
      grid-column: span 2;
    }
  }
</style>
